            <Button x:Name="btnDeleteAccount" Content="حذف" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FF730000" BorderBrush="#FFDCDBD1" Foreground="#FFDCDBD1" Width="148" Height="23" FontSize="18" Cursor="Hand" Margin="10,164,0,0"/>
            <Button x:Name="btnLogout" Content="ویرایش" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFDEC205" BorderBrush="#FFDCDBD1" Foreground="Black" Width="148" Height="22" FontSize="18" Cursor="Hand" Margin="10,192,0,0"/>
            <Button x:Name="btnJoinSpecial" Content="ثبت" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FF258A2F" BorderBrush="#FFDCDBD1" Foreground="#FFDCDBD1" Width="148" Height="23" FontSize="18" Cursor="Hand" Margin="10,219,0,0"/>
        </Grid>
        <Grid Background="#FF25252B" Margin="0,10,10,2" Grid.Row="1">
            <Label x:Name="label1_Copy3" Foreground="#FFDCDBD1" Content="نام کاربری" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="28" FontSize="14" HorizontalContentAlignment="Center" Margin="4,5,0,0"/>
            <TextBox x:Name="textBox_Copy2" HorizontalAlignment="Left" Margin="106,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199"/>
            <Label x:Name="label1_Copy4" Foreground="#FFDCDBD1" Content="ایمیل" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="23" FontSize="14" HorizontalContentAlignment="Center" Margin="4,33,0,0"/>
