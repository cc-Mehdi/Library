        <Grid Background="#FF25252B" Margin="10,10,10,2" Grid.Column="1" Grid.Row="1">
            <DataGrid x:Name="dataGrid_Copy1" d:ItemsSource="{d:SampleData ItemCount=3}" Background="#FF25252B" Margin="0,0,0,-2"/>
